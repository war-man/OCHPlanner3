@model OCHPlanner3.Models.RoleListViewModel

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<table id="rolesTable" class="table table-striped dataTable" data-processing="true">
    <thead>
        <tr>
            <th data-data="id">Id</th>
            <th data-data="name" style="width:80%">@Localizer["Name"]</th>
            <th data-data="usercount" style="width:20%">@Localizer["UserCount"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>@role.UserCount</td>
            </tr>
        }
    </tbody>
</table>