
@model ProductManagementViewModel

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@Html.Hidden("hid10Rows", Localizer["10Rows"].Value)
@Html.Hidden("hid25Rows", Localizer["25Rows"].Value)
@Html.Hidden("hid50Rows", Localizer["50Rows"].Value)
@Html.Hidden("hidAllRows", Localizer["AllRows"].Value)

<table id="ProductListTable" class="table table-striped dataTable" data-processing="true">
    <thead>
        <tr>
            <th data-data="id">Id</th>
            <th data-data="productNo">@Localizer["ProductNo"]</th>
            <th data-data="description">@Localizer["Description"]</th>
            <th data-data="costPrice">@Localizer["Cost"]</th>
            <th data-data="retailPrice">@Localizer["Retail"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductNo</td>
                <td>@product.Description</td>
                <td>@product.CostPrice</td>
                <td>@product.RetailPrice</td>
            </tr>
        }
    </tbody>
</table>
