@model MaintenanceTypeManagementViewModel

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@Html.Hidden("hid10Rows", Localizer["10Rows"].Value)
@Html.Hidden("hid25Rows", Localizer["25Rows"].Value)
@Html.Hidden("hid50Rows", Localizer["50Rows"].Value)
@Html.Hidden("hidAllRows", Localizer["AllRows"].Value)

<table id="MaintenanceTypeListTable" class="table table-striped dataTable" data-processing="true">
    <thead>
        <tr>
            <th data-data="id">Id</th>
            <th data-data="code" style="width:25%">@Localizer["Code"]</th>
            <th data-data="name" style="width:50%">@Localizer["Name"]</th>
            <th data-data="price" style="width:25%">@Localizer["TotalPrice"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MaintenanceTypeList)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Code</td>
            <td>@item.Name</td>
            <td>@item.MaintenanceTotalPrice</td>
        </tr>
        }
    </tbody>
</table>