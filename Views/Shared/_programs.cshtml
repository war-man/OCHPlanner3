@model IEnumerable<ProgramViewModel>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="card">
    <div class="card-body">
        <h4 class="header-title"><i class="fad fa-list-alt mr-2"></i>@Localizer["Programs"]</h4>
        @if (Model == null || !Model.Any())
        {
            <span><i class="fad fa-exclamation-triangle text-danger mr-2"></i>@Localizer["NoProgramDefined"]</span>
        }

        <ul id="add-role-list-ul" style="list-style: none; padding: 10px;">
            @foreach (var program in Model)
            {
                <li>
                    <div class="row pl-3 mb-1">
                        <div class="col-md-6 mt-1">
                            <input name="programs[]" type="checkbox" class="checkbox mr-2 mt-1" value="@program.Id" @(program.Selected ? "checked" : "") />
                            <label style="font-weight:500;">@program.Name</label>
                        </div>
                        <div class="col-md-3">
                            <input name="Note_@program.Id" class="form-control" type="text" value="@program.Note">
                        </div>
                    </div>
                </li>

            }
        </ul>
    </div>
</div>
